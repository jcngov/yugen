<div class="container">
  <h1 class="text-center"> Sign Up </h1>

  <div class="col-md-4 col-md-offset-4">
    <%= form_for @user do |f| %>
      <div class="form-group">
        <%= f.label :first_name, "First Name" %>
        <input class="form-control" placeholder="First Name"<%= f.text_field :first_name %>
      </div>
      <div class="form-group">
        <%= f.label :last_name, "Last Name" %>
        <input class="form-control" placeholder="Last Name"<%= f.text_field :last_name %>
      </div>
      <div class="form-group">
        <%= f.label :sex, 'I am' %>
        <select class="text" placeholder="Select Sex"<%= f.text_field :sex %>
          <option>Male</option>
          <option>Female</option>
        </select>
      </div>
      <div class="form-group">
        <%= f.label :born_on, 'Birthday' %>
        <input class="form-control" placeholder="Birthday"<%= f.text_field :born_on %>
      </div>
      <div class="form-group">
        <%= f.label :email %>
        <input class="form-control" placeholder="Email"<%= f.text_field :email %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <input class="form-control" placeholder="Password"<%= f.password_field :password %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, "Password Confirmation" %>
        <input class="form-control" placeholder="Please Enter Password Again" <%= f.password_field :password_confirmation %>
      </div>
    <%= f.submit "Submit" %>
  </div>
</div>
<% end %>

<ul>
  <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
</ul>

