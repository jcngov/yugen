 <%= render 'welcomeandnav' %>
  <h1 class="text-center"> Edit Profile </h1>

  <div class="col-md-4 col-md-offset-4">
    <%= form_for @user, html: { multipart: true } do |f| %>
      <div class="form-group">
        <%= f.label :first_name, "First Name" %>
        <%= f.text_field :first_name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :last_name, "Last Name" %>
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :sex, 'I am' %>
          <select class="text" placeholder="Select Sex"<%= f.text_field :sex %>
            <option>Male</option>
            <option>Female</option>
          </select>
      </div>
      <div class="form-group">
        <%= f.label :born_on, 'Birthday' %>
       <%= f.text_field :born_on, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :profilepicture, "Profile Picture" %>
        <%= f.file_field :profilepicture %>
      </div>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email, class: "form-control" %>
      </div>
      <%= f.submit "Update" %>
      <%= link_to "Home", home_path %>
    <% end %>
  </div>
</div>

