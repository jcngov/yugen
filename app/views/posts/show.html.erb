<h1>Show Page</h1>

<ul>

    <li>Title: <%= @post.title %></li>
    <li>Date Traveled: <%= @post.traveled_on %></li>
    <li>Description: <%= @post.description %> </li>
    <li>Pros: <%= @post.pros %> </li>
    <li>Cons: <%= @post.cons %> </li>

</ul>

<h2>Locations</h2>
<ul>
  <% @post.locations.each do |loc| %>
    <li>
      <strong>Continent: </strong><%= loc.continent %>
      &nbsp;&nbsp;|&nbsp;&nbsp;<strong>Region: </strong><%= loc.region %>
    </li>
  <% end %>
</ul>

<% if current_user == @user %>
  <%= link_to "Edit", edit_post_path(@post) %>
  <%= link_to "Delete", @post, method: :delete, data: {confirm: "Are you sure?"} %>
<% end %>
  <%= link_to "Back", users_path %>
  <%= link_to "Home", home_path %>

<%= form_for [@post, @image], html: { multipart: true } do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :postpicture %>
  <%= f.file_field :postpicture %>
  <%= f.submit "Upload" %>
<% end %>

<h3> Add Location </h3>
<%= form_for [@post, @location] do |f| %>
  <div class="form-group">
    <%= f.label :continent %>
    <input class="form-control" placeholder="Title"<%= f.text_field :continent %>
  </div>
  <div class="form-group">
    <%= f.label :country %>
    <input class="form-control" placeholder="Title"<%= f.text_field :country %>
  </div>
  <div class="form-group">
    <%= f.label :region %>
    <input class="form-control" placeholder="Title"<%= f.text_field :region %>
  </div>
  <div class="form-group">
    <%= f.label :city %>
    <input class="form-control" placeholder="Title"<%= f.text_field :city %>
  </div>
  <%= f.submit "Submit" %>
<% end %>



<% @post.images.each do |img| %>
  <h3><%= img.title %></h3>
  <img src="<%= img.postpicture %>">
<% end %>



